@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-2">
    <a class="btn btn-primary" title="New Roles" style="float:right;color:white" href="@Url.Action("Create","RolesAdmin")">
        <i class="fas fa-plus-circle" style="margin-right:10px"></i>Add
    </a>
    Roles
</h2>
<hr />

<table class="table table-bordered table-hover">
    <thead class="text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center" style="width:130px">
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <a href="@Url.Action("Details","RolesAdmin", new { id = item.Id })" title="View Details the registry"><i class="fas fa-eye" style="font-size:20px;color:green"></i></a>
                    <a href="@Url.Action("Edit","RolesAdmin", new { id = item.Id })" title="Edit registry" class="mx-2"><i class="fas fa-edit" style="font-size:20px"></i></a>                    
                    <a href="@Url.Action("Delete","RolesAdmin", new { id = item.Id })" title="Delete registry"><i class="fas fa-trash" style="font-size:20px;color:red"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>