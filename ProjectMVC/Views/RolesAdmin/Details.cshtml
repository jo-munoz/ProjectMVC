@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}

<h2 class="mt-2">
    <a class="btn btn-danger" style="float:right;color:white" href="@Url.Action("Index","RolesAdmin")">
        <i class="fas fa-chevron-circle-left" style="margin-right:10px"></i>Back
    </a>
    Details Roles
</h2>
<hr />

<div>    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<h4>List of users in this role</h4>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>No users found in this role.</p>
}

<table class="table">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p>
    <a class="btn btn-success" style="color:white" href="@Url.Action("Edit","RolesAdmin", new { id = Model.Id })">
        <i class="fas fa-edit" style="margin-right:10px"></i>Edit
    </a>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @*@Html.ActionLink("Back to List", "Index")*@
</p>