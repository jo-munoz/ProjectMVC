@model IEnumerable<ProjectMVC.Logica.Models.ViewModels.TasksIndexViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Tasks</h2>
@*<h6>Project: @ViewBag.Project.Title</h6>*@

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Projects", "Index", "Projects")</li>
        <li class="breadcrumb-item active" aria-current="page">Tasks of @ViewBag.Project.Title</li>
    </ol>
</nav>

@Html.ActionLink(" ", "Create", "Tasks", new { projectId = ViewBag.Project.Id }, new { @class = "btn btn-primary fas fa-plus-circle" })

@*@Html.ActionLink(" ", "Index", "Projects", null, new { @class = "btn btn-danger fas fa-undo-alt" })*@

<table class="table table-bordered">
    <tr>
        <td>@Html.DisplayNameFor(x => x.Title)</td>
        <td>@Html.DisplayNameFor(x => x.Details)</td>
        <td>@Html.DisplayNameFor(x => x.ExpirationDate)</td>
        <td>@Html.DisplayNameFor(x => x.IsCompleted)</td>
        <td>@Html.DisplayNameFor(x => x.Effort)</td>
        <td>@Html.DisplayNameFor(x => x.RemainingWork)</td>
        <td>@Html.DisplayNameFor(x => x.State)</td>
        <td>@Html.DisplayNameFor(x => x.Activity)</td>
        <td>@Html.DisplayNameFor(x => x.Priority)</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.Title)</td>
            <td>@Html.DisplayFor(model => item.Details)</td>
            <td>@Html.DisplayFor(model => item.ExpirationDate)</td>
            <td>@Html.DisplayFor(model => item.IsCompleted)</td>
            <td>@Html.DisplayFor(model => item.Effort)</td>
            <td>@Html.DisplayFor(model => item.RemainingWork)</td>
            <td>@Html.DisplayFor(model => item.State)</td>
            <td>@Html.DisplayFor(model => item.Activity)</td>
            <td>@Html.DisplayFor(model => item.Priority)</td>
        </tr>
    }
</table>